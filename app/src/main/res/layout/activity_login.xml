<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#6578AA"
    tools:context=".Login">

    <ImageView
        android:id="@+id/welcome_login_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/login_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/imageback"
        android:drawableStart="@drawable/email"
        android:drawablePadding="15dp"
        android:ems="10"
        android:elevation="8dp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="14dp"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/imageback"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Password"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:padding="14dp" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/login_show_password_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:buttonTint="@android:color/white"
        android:text="Show Password"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#CEE1BB"
        android:elevation="10dp"
        android:padding="14dp"
        android:text="Login Account"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/login_reg_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#CEE1BB"
        android:padding="14dp"
        android:text="Need a new account"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/forgot_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="14dp"
        android:background="#CEE1BB"
        android:text="forgot password"
        android:textAllCaps="false" />



</LinearLayout>