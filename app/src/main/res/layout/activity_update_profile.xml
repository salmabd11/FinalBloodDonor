<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    tools:context=".UpdateProfile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ProfileTXT"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/name"
                android:text="Profile Update"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#880F88"/>


            <ImageView
                android:id="@+id/singleimageviewVA"
                android:layout_width="match_parent"
                android:layout_height="251dp"
                android:src="@drawable/car1"
                android:layout_below="@+id/ProfileTXT"
                android:background="@drawable/imageback"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C4C5EA"
                android:layout_below="@+id/singleimageviewVA"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/txtNameVA"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/name"
                    android:text="  Full Name"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#880F88"/>
                <TextView
                    android:id="@+id/txtEmailVA"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:text="  Email"
                    android:textSize="14dp"
                    android:textStyle="bold"/>


                <EditText
                    android:id="@+id/Etage"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/age"
                    android:nextFocusDown="@id/Etgender"
                    android:hint="  Age +18"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/Etgender"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/gender"
                    android:nextFocusDown="@id/EtEmail"
                    android:hint="  Gender"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/EtPhone"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phone"
                    android:nextFocusDown="@id/spinner"
                    android:hint="  Phone"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/Bloodgroup"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/blood"
                    android:hint="  Bloodgroup"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/EtDivision"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/name"
                    android:nextFocusDown="@id/EtDistrict"
                    android:hint="Division"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/EtDistrict"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/name"
                    android:nextFocusDown="@id/EtPoliceSt"
                    android:hint="District"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/EtPoliceSt"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/name"
                    android:nextFocusDown="@id/EtAddress"
                    android:hint="Police Station"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/EtAddress"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/name"
                    android:nextFocusDown="@id/SaveBTN"
                    android:hint="Address"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtEmailVA"
                    android:padding="10dp"
                    android:background="#CEE1BB"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ButtonDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimary"
                        />
                    <Button
                        android:id="@+id/DonorBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donor List"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="@color/colorPrimary"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>